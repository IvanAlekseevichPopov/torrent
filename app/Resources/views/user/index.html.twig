{% extends 'base.html.twig' %}

{% block body %}
    <h1>Users list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Statusid</th>
                <th>Username</th>
                <th>Useremail</th>
                <th>Salt</th>
                <th>Password</th>
                <th>Resetpasswordtoken</th>
                <th>Resetpasswordrequestedat</th>
                <th>Confirmationtoken</th>
                <th>Lastloginat</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td><a href="{{ path('user_show', { 'id': user.id }) }}">{{ user.id }}</a></td>
                <td>{{ user.statusId }}</td>
                <td>{{ user.userName }}</td>
                <td>{{ user.userEmail }}</td>
                <td>{{ user.salt }}</td>
                <td>{{ user.password }}</td>
                <td>{{ user.resetPasswordToken }}</td>
                <td>{% if user.resetPasswordRequestedAt %}{{ user.resetPasswordRequestedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ user.confirmationToken }}</td>
                <td>{% if user.lastLoginAt %}{{ user.lastLoginAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('user_show', { 'id': user.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('user_edit', { 'id': user.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('user_new') }}">Create a new user</a>
        </li>
    </ul>
{% endblock %}
